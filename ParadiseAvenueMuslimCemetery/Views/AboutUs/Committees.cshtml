@{
    ViewData["Title"] = "Committees";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<style>
   
    .committees-wrapper {
        padding: 60px 20px;
        background: linear-gradient(to right bottom, #fff3e0, #ffe5b4);
   }

    .committees-container {
        max-width: 1140px;
        margin: auto;
        padding: 40px 20px;
    }

    .section-title {
        font-size: 36px;
        font-weight: 700;
        color: #e67e22;
        text-align: center;
        margin-bottom: 10px;
    }

    .section-subtitle {
        font-size: 18px;
        color: #666;
        text-align: center;
        margin-bottom: 40px;
        max-width: 800px;
        margin-left: auto;
        margin-right: auto;
    }

    .committees-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
        gap: 25px;
    }

    .committee-card {
        background: #fff;
        border-radius: 12px;
        padding: 25px 20px;
        box-shadow: 0 6px 18px rgba(0, 0, 0, 0.07);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border-left: 6px solid #f39c12;
    }

        .committee-card:hover {
            transform: translateY(-6px);
            box-shadow: 0 12px 22px rgba(0, 0, 0, 0.12);
        }

        .committee-card h3 {
            font-size: 20px;
            color: #d35400;
            margin-bottom: 12px;
        }

        .committee-card p {
            font-size: 15px;
            color: #444;
            line-height: 1.7;
        }

    .join-box {
        margin-top: 50px;
        background: #fff8e1;
        border-left: 6px solid #f39c12;
        padding: 20px 25px;
        border-radius: 10px;
        text-align: center;
        font-size: 16px;
        color: #7a6000;
    }

        .join-box a {
            color: #d35400;
            font-weight: bold;
            text-decoration: underline;
        }

