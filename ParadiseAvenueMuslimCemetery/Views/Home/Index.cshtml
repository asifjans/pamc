        }

    .memorial-img-container {
        position: relative;
        overflow: hidden;
        height: 250px;
    }

    .memorial-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        filter: brightness(0.9);
        transition: all 0.5s ease;
    }

    .memorial-card:hover .memorial-img {
        filter: brightness(0.7);
        transform: scale(1.05);
    }

    .memorial-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.7);
        color: white;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        opacity: 0;
        transition: opacity 0.3s ease;
        padding: 20px;
        text-align: center;
    }

    .memorial-card:hover .memorial-overlay {
        opacity: 1;
    }

    .memorial-info h5 {
        font-size: 1.5rem;
        margin-bottom: 15px;
        color: #fff;
    }

    .memorial-info p {
        margin-bottom: 8px;
        font-size: 0.9rem;
    }

    .memorial-message {
        font-style: italic;
        margin-top: 15px;
        color: #f8f9fa;
    }

    .status-badge {
        position: absolute;
        top: 15px;
        right: 15px;
        padding: 5px 10px;
        border-radius: 20px;
        font-size: 0.8rem;
        font-weight: bold;
        color: white;
        z-index: 2;
    }

    .status-occupied {
        background-color: #28a745; /* Green */
    }

    .status-available {
        background-color: #6c757d; /* Gray */
