@{
    ViewData["Title"] = "Pictures";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<style>
    .gallery-container {
        max-width: 1200px;
        margin: 50px auto;
        padding: 30px;
        background: #fff;
        border-radius: 12px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.08);
        font-family: 'Segoe UI', sans-serif;
    }

    .gallery-header {
        background: linear-gradient(to right, #e67e22, #f39c12);
        color: white;
        padding: 20px;
        font-size: 28px;
        font-weight: 600;
        border-radius: 12px 12px 0 0;
        text-align: center;
        margin-bottom: 30px;
    }

    .gallery-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        gap: 20px;
    }

    .gallery-item {
        overflow: hidden;
        border-radius: 10px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
        transition: transform 0.3s ease;
    }

        .gallery-item img {
            width: 100%;
            height: 220px;
            object-fit: cover;
            border-radius: 10px;
            transition: transform 0.3s ease;
        }

        .gallery-item:hover img {
            transform: scale(1.05);
        }

    .gallery-caption {
        text-align: center;
        font-size: 14px;
        color: #555;
        margin-top: 8px;
    }
</style>

<div class="container-fluid page-header mb-5 wow fadeIn" data-wow-delay="0.1s">
    <div class="container text-center py-5">
        <h1 class="display-4 text-white animated slideInDown mb-4">Photo Gallery</h1>
        <nav aria-label="breadcrumb animated slideInDown">
            <ol class="breadcrumb justify-content-center mb-0">
                <li class="breadcrumb-item"><a class="text-white" href="/">Home</a></li>
                <li class="breadcrumb-item text-primary active" aria-current="page">Pictures</li>
            </ol>
        </nav>
    </div>
</div>

<div class="gallery-container">
    <div class="gallery-header">Paradise Avenue Muslim Cemetery Photo Gallery</div>

    <div class="gallery-grid">
        <!-- Gallery Image 1 -->
        <div class="gallery-item">
            <img src="~/Theme/img/cementry.png" alt="Cemetery View 1">
            <div class="gallery-caption">Peaceful Cemetery Grounds</div>
        </div>

        <!-- Gallery Image 2 -->
        <div class="gallery-item">
            <img src="~/Theme/img/pathway.jpeg" alt="Cemetery View 2">
            <div class="gallery-caption">Grave Area with Pathway</div>
        </div>

        <!-- Gallery Image 3 -->
        <div class="gallery-item">
            <img src="~/Theme/img/janaazah.jpeg" alt="Funeral Setup">
            <div class="gallery-caption">Janazah Area Preparation</div>
        </div>

        <!-- Gallery Image 4 -->
        <div class="gallery-item">
            <img src="~/Theme/img/imageparadise.png" alt="Entrance Sign">
            <div class="gallery-caption">Main Entrance Signboard</div>
        </div>

        <!-- Gallery Image 5 -->
        <div class="gallery-item">
            <img src="~/Theme/img/ccommunity.jpeg" alt="Community Gathering">
            <div class="gallery-caption">Community Gathering During Burial</div>
        </div>

        <!-- Add more images as needed -->
    </div>
</div>



